<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@color/black">

    <com.dabao.xuexiao.common.view.DrawableSelectImageView
        android:layout_width="@dimen/drawable_select_view_size"
        android:layout_height="@dimen/drawable_select_view_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/activity_register_btn"
        android:id="@+id/activity_drawable_select_imageview"/>

    <View
        android:layout_width="@dimen/drawable_select_view_size"
        android:layout_height="@dimen/drawable_select_view_size"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        android:background="@color/white"
        android:id="@+id/activity_drawable_select_view" />

</RelativeLayout>